/* Main Config (main) */

/* ---- Configuration ---- */
configuration {
    modi:                       "drun,run,filebrowser";
    font:                       "JetBrains Mono 12";
    show-icons:                 false;
    display-drun:               "î¯†";
	display-run:                "î¯Š";
    display-filebrowser:        "ï’¥";
    display-window:             "ó±‚¬";
	drun-display-format:        "{name}";
    hover-select:               false;
    me-select-entry:            "MouseSecondary";
    me-accept-entry:            "MousePrimary";
    window-format:              "{w} Â· {c} Â· {t}";
	dpi:						1;
    
}

/* ---- Load pywal colors (custom wal template) ---- */
@import "~/.config/rofi/pywal-color/pywal-theme.rasi"

/* ---- Window ---- */
window {
    width:						500px;
	/*height:						450px;*/
    x-offset:                   0px;
    y-offset:                   0px;
    spacing:                    0px;
    padding:                    1px;
    margin:                     0px; 
    border:                     0px;
    border-color:               #000000;
    cursor:                     "default";
    location:                   center;
    anchor:                     center;
    fullscreen:                 false;
    enabled:                    true;
    border-radius:              12px;
}

/* ---- Mainbox ---- */
mainbox {
    enabled:                    true;
    orientation:                vertical;
	padding:					8px;
    background-color:           #000000;
    children:                   [ "inputbar", "imagebox" ];
    border-radius:              12px;
}

/* ---- Imagebox ---- */
imagebox {
    background-color:           transparent;
    orientation:                horizontal;
    children:                   [ "mode-switcher",  "listbox"];
}

/* ---- Listbox ---- */
listbox {
    spacing:                    4px;
    orientation:                vertical;
    children:                   ["listview" ];
	padding:					6px;
    border-radius:              12px;
    border:                     1px;
    border-color:               #000000;
	background-color:		    #000000;
}

/* ---- Dummy ---- */
dummy {
    background-color:           transparent;
}

/* ---- Inputbar ---- */
inputbar {
    enabled:                    true;
    text-color:                 #c6e6f3;
    spacing:                    10px;
    border-radius:              12px;
    border-color:               #000000;
	background-color:		    #000000;
    children:                   [ "textbox-prompt-colon","entry" ];
    border:                     1px;
    border-color:               #000000;
}

textbox-prompt-colon {
    enabled:                    true;
	padding:					6px 0px 6px 10px;
    expand:                     false;
    str:                           "ðŸŽµ";
    text-color:                 inherit;
	background-color:			transparent;
}

entry {
    enabled:                    true;
	padding:					6px 0px 0px 0px;
    text-color:                 inherit;
    cursor:                     text;
    placeholder:                "Search Playlists";
    placeholder-color:          inherit;
	background-color:			transparent;
}

/* ---- Mode Switcher ---- */
mode-switcher{
	orientation:				vertical;
    enabled:                    true;
    spacing:                    12px;
    background-color:          	#000000;
    text-color:                 #c6e6f3;
}

button {
    padding:                   0px 12px 0px 8px;
    border-radius:             12px;
    background-color:          #000000;
    text-color:                inherit;
    cursor:                    pointer;
    border:                     1px;
    border-color:               #000000;
}

button selected {
    background-color:          #1e1e2e;
    text-color:                #c6e6f3;
    border:                    1px;
    border-color:              #1e1e2e;
	
}

/* ---- Listview ---- */
listview {
	enabled:					true;
	columns:					1;
	lines:						9;
	spacing:                    2px;
	padding:					6px;
	dynamic:                    true;
	cycle:                      true;
	scrollbar:                  false;
	layout:                     vertical;
	reverse:                    false;
	fixed-height:               true;
	fixed-columns:              false;
	background-color:           #000000;
	border-radius:   	        12px;
	border:						0px;
}

/* ---- Element ---- */
element {
    enabled:                    true;
    padding:                    5px;
    margin:                     2px;
    cursor:                     pointer;
    background-color:         	#000000;
    border-radius:              12px;
    border:                     0px;
}

element normal.normal {
    background-color:           inherit;
    text-color:                 #c6e6f3;
}

element normal.urgent {
    background-color:           inherit;
    text-color:                 #c6e6f3;
}

element normal.active {
    background-color:           inherit;
    text-color:                 #c6e6f3;
}

element selected.normal {
    background-color:           #313244;
    text-color:                 #c6e6f3;
}

element selected.urgent {
    background-color:           inherit;
    text-color:                 #c6e6f3;
}

element selected.active {
    background-color:           inherit;
    text-color:                 @foreground;
}

element alternate.normal {
    background-color:           inherit;
    text-color:                 #c6e6f3;
}

element alternate.urgent {
    background-color:           inherit;
    text-color:                 #c6e6f3;
}

element alternate.active {
    background-color:           inherit;
    text-color:                 #c6e6f3;
}

element-icon {
    background-color:           transparent;
    text-color:                 inherit;
    size:                       32px;
    cursor:                     inherit;
}

element-text {
    background-color:           transparent;
    text-color:                 inherit;
    cursor:                     inherit;
    vertical-align:             0.5;
    horizontal-align:           0;
}

/*****----- Message -----*****/
message {
    background-color:           @background;
    margin:						20px 0px 0px 0px;
    border-radius: 				12px;
}

textbox {
    padding:                    10px;
    background-color:      		@background;
    text-color:                 #c6e6f3;
}

error-message {
    padding:                    15px;
    border-radius:            	12px;
    background-color:      		@background;
    text-color:                 #c6e6f3;
}
